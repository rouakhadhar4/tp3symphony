            <thead>
                <tr>
                    <th>Article</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for article in articles %}
                    <tr>
                        <td>{{ article }}</td>
                        <td>
                            <a href="/article/1" class="btn btn-dark">DÃ©tails</a>
